#include <stdio.h>
#include <stdlib.h>

//Este é um programa que calcula o perímetro de um retângulo
int main()
{
    //Atribuição de variáveis
    int lado1,lado2,lado3, lado4, perimetro;

    //O que será exibido inicialmente
    printf("\nInsira aqui o valor dos lados respectivamente:\n");
    //O que será lido e armazenado
    scanf("%d %d %d %d", &lado1, &lado2, &lado3, &lado4);

    //Atribuição de fórmulas
    perimetro= lado1+lado2+lado3+lado4;

    //O que será printado
    printf("\nO valor eh de: %d", perimetro);
    return 0;
}
